<?xml version="1.0" encoding="UTF-8"?>
<head
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/1999/xhtml xhtml1-transitional.xsd"
>
	<title>AutoAuth</title>
	<style type="text/css">
		@font-face
		{
			font-family: bit2shift;
			src: url('media/bit2shift.ttf');
		}
		body
		{
			background: url('media/logo.png') 8px 8px no-repeat, url('media/metal.png');
			margin-top: 80px;
		}
		input
		{
			border: 2px solid #444;
			border-radius: 20px;
			box-shadow: 0 0 20px #444 inset;
			margin: 4px;
			text-align: center;
		}
		input, p
		{
			color: #444;
			font: 1em bit2shift;
			text-shadow:
				  -1px 0   2px #CCC,
				  +1px 0   2px #CCC,
				0 -1px     2px #CCC,
				0 +1px     2px #CCC;
		}
	</style>
</head>
